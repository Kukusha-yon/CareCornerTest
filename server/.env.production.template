# Server Configuration
NODE_ENV=production
PORT=5001

# Database
MONGODB_URI=mongodb+srv://username:password@your-production-cluster.mongodb.net/carecorner?retryWrites=true&w=majority

# JWT Authentication
JWT_SECRET=your_production_jwt_secret_key_at_least_32_chars_long
JWT_EXPIRE=30d
JWT_REFRESH_SECRET=your_production_refresh_secret_key_at_least_32_chars_long
JWT_REFRESH_EXPIRE=7d

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Email Service (Gmail)
SMTP_USER=your-production-email@gmail.com
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret
GMAIL_REFRESH_TOKEN=your_gmail_refresh_token
GMAIL_ACCESS_TOKEN=your_gmail_access_token
SMTP_FROM=noreply@your-production-domain.com

# Stripe (if applicable)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# External APIs
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key
NEWS_API_KEY=your_news_api_key

# Logging
LOG_LEVEL=info

# Security
CORS_ORIGIN=https://your-production-domain.com,https://admin.your-production-domain.com 